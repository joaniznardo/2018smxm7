acl internal-net {
    192.168.50.0/24;
    localhost;
};

acl external-net {
    10.50.0.0/24;
    any;
};

options {
    directory "/var/cache/bind";

    // Recursion allowed only for internal network
    allow-recursion { internal-net; };
    recursion yes;

    // Listen on IPv4
    listen-on { any; };
    listen-on-v6 { none; };

    allow-transfer { none; }; // Default deny, overridden in zones
};
